{
    // "Logging": {
  //   "LogLevel": {
  //     "Default": "Information",
  //     "Microsoft.AspNetCore": "Warning"
  //   }
  // },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[ServiceName: {ServiceName}] [{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [RequestId: {RequestId}] [TraceId: {TraceId}] [SpanId: {SpanId}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "path": "logs/APIGatewayLog-.json",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "EvoTicketing": "Server=localhost; Database=EvoTicketing; Trusted_Connection=True; TrustServerCertificate=True; Connection Timeout=15; Min Pool Size=0; Max Pool Size=100;"
  }
}
